FROM ubuntu:latest
# Set environment variables to avoid prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC
# Set timezone
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    zlib1g-dev \
    libncurses5-dev \
    libgdbm-dev \
    libnss3-dev \
    libssl-dev \
    libreadline-dev \
    libffi-dev \
    libsqlite3-dev \
    wget \
    curl \
    llvm \
    libncursesw5-dev \
    xz-utils \
    tk-dev \
    libxml2-dev \
    libxmlsec1-dev \
    libffi-dev
# Download and extract Python source
RUN wget https://www.python.org/ftp/python/3.12.4/Python-3.12.4.tgz
RUN tar xzf Python-3.12.4.tgz
# Configure, build, and install Python
WORKDIR /Python-3.12.4
RUN ./configure --enable-shared --prefix=/usr/local
RUN make
RUN mkdir -p /python-build
CMD ["make", "install", "DESTDIR=/python-build"]
